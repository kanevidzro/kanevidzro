---
import Head from '../components/Head.astro'
import Header from '../components/Header.astro'
import { SITE } from '../consts'

type Props = {
  title: string
  description: string
  image?: string
}

const { title, description, image } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${title} | ${SITE.NAME}`}
      description={description}
      image={image}
    />
  </head>
  <body>
    <Header />
    <main role="main">
      <slot />
    </main>
  </body>
</html>
