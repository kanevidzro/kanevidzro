---
import Head from '../components/Head.astro'
import Header from '../components/Header.astro'
import { SITE } from '../consts'

type Props = {
  title: string
  description: string
  image?: string
}

const { title, description, image } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <Head
      title={`${title} | ${SITE.NAME}`}
      description={description}
      image={image}
    />
  </head>
  <body>
    <div
    			id='navbar+title'
          			class='flex flex-col w-full gap-6 max-w-xl lowercase'>
    <Header />
    <main
      role="main"
      class="mx-auto my-6 flex w-full max-w-xl flex-col items-center justify-start p-4 antialiased">
      <slot />
    </main>
    </div>
  </body>
</html>
