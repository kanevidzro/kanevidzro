---
import { cn } from '../lib/utils'

type Props = {
  href: string
  external?: boolean
  underline?: boolean
}

const { href, external, underline = true, ...rest } = Astro.props
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  rel={external ? 'noopener noreferrer' : undefined}
  class={cn(
    'inline-block text-current hover:text-black transition-colors duration-300 ease-in-out decoration-black/15 hover:decoration-black/25',
    underline && 'underline underline-offset-2',
  )}
  {...rest}>
  <slot />
</a>
