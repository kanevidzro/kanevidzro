---
import Layout from '../layouts/Layout.astro'
import Container from '../components/Container.astro'
import { HOME, SITE } from '../consts' // Ensure SITE.NAME and SITE.TITLE are used
---

<Layout title={SITE.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <section>
      <h1
        class="w-full text-start text-[min(12vw,72px)] leading-[0.9] font-medium tracking-[-2px] sm:tracking-[-4px]">
        {SITE.NAME} <br />
        <span class="text-gray-500 dark:text-gray-400">
          {SITE.TITLE}
        </span>
      </h1>
      <p class="mt-6 text-xl text-gray-700 dark:text-gray-300 max-w-2xl">
        {HOME.DESCRIPTION}
      </p>
    </section>
  </Container>
</Layout>
